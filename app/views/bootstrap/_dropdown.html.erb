<div class="btn-group">
 	<button type="button" class="btn btn-default">
  	<span class='selected-color' style="background-color:<%= colors[index] %>;"></span> <%= colors[index] %>
	</button>
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% colors.each do |color| %>
			<li>
				<a href='#' class='select-color' data-index="<%= index %>">
					<span style="display:inline-block;width:20px;height:15px;background-color:<%= color %>;"></span>
					<span class='value'><%= color%></span>
				</a>
			</li>
		<% end %>
  </ul>
</div>
